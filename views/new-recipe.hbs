<h2>New recipes page</h2>


<form action="/recipe/add" method="POST" enctype="multipart/form-data">

  <label for="">Title:</label>
  <input type="text" name="title" placeholder="Recipe title">
  <br>

  <label for="">Preparation Time:</label>
  <input id="preparationTime" type="number" name="preparationTime" placeholder="Mins">

  {{!-- <label for="">Difficulty:</label>
  <input type="number" name="difficulty"> --}}

  <label for="difficulty">Difficulty:</label>
  <select name="difficulty" id="difficulty">
    <option value="0">0</option>
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3" selected>3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>

  {{!-- <label for="">Servings:</label>
  <input type="number" name="servings"> --}}

  <label for="servings">Servings</label>
  <select name="servings" id="servings">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3" selected>3</option>
    <option value="4">4</option>
    <option value="5">5</option>
    <option value="6">6</option>
    <option value="7">7</option>
    <option value="8">8</option>
    <option value="9">9</option>
    <option value="10">10</option>
  </select>

  <br>
  <label for="">Image:</label>
  <input type="file" name="recipeImg">
  <br>

  <label for="">Short Description:</label> <br>
  {{!-- <input type="text" name="shortDescription" placeholder="Describe shortly your recipe"> --}}
  <textarea rows="2" cols="50" name="shortDescription" placeholder="Describe shortly your recipe..."></textarea>
  <br>

  <label for="">Steps:</label> <br>
  {{!-- <input type="text" name="steps"> --}}
  <textarea rows="4" cols="50" name="steps" placeholder="Enter your full recipe, step by step...">
</textarea>

  <br>
  <h3>Ingridients</h3>
  <div id="all-ingridients-form">
    <div class="ingredients-in-form">
      <label for="">Quantity:</label>
      <input type="number" name="quantity" placeholder="20">

      <label for="measure">Measure:</label>
      <select name="measure" id="measure">
        <option value="g" selected>g</option>
        <option value="kg">kg</option>
        <option value="ml">ml</option>
        <option value="l">l</option>
        <option value="unit">unit</option>
        <option value="spoon">spoon</option>
        <option value="teaspoon">teaspoon</option>
      </select>

      <label for="">Ingredient:</label>
      <input type="text" name="name" placeholder="Carrots">
      <button id="delete-recipie-in-form">delete</button>
    </div>
  </div>
  <button id="add-recipie-in-form"> add ingridient</button>
  <br>
  <br>


  <h3>Tags:</h3>
  <input type="checkbox" name="tags" value="vegan">Vegan</option>
  <input type="checkbox" name="tags" value="vegetarian">Vegetarian</option>
  <input type="checkbox" name="tags" value="gluten-free">Gluten Free</option>
  <input type="checkbox" name="tags" value="dairy-free">Dairy Free</option>
  <input type="checkbox" name="tags" value="keto">Keto</option>
  <input type="checkbox" name="tags" value="macrobiotic">Macrobiotic</option>
  <input type="checkbox" name="tags" value="healthy">Healthy</option>
  <input type="checkbox" name="tags" value="low-sugar">Low sugar</option>

  <br>
  <br>
  <button type="submit">ADD</button>
</form>



<script src="javascripts/addNewIngridient.js"> </script>